PROGS=fmsclient
OBJ=fmsclient.o err_handler.o send_request.o recv_response.o set_request.o \
	process_response.o common.o set_request.o
FLAGS=-Wall -lcrypt $(DEBUG)
CC=gcc

ALL: $(PROGS)

fmsclient: $(OBJ)
	$(CC) -o $@ $^ $(FLAGS)
%.o: %.c
	$(CC) -c $^ $(FLAGS)

install:
	mkdir /usr/share/fmsclient/
	cp fmsclient /usr/share/fmsclient/
	ln -s /usr/share/fmsclient/fmsclient /bin/

uninstall:
	$(RM) -r /usr/share/fmsclient/
	$(RM) /bin/fmsclient

clean:
	$(RM) $(OBJ) $(PROGS)
	$(RM) $(wildcard *.h.gch)
